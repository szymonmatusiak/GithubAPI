<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.szymon.githubapi.main.MainActivity">

    <fragment android:name="com.example.szymon.githubapi.main.SearchFragment"
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_search" />

    <fragment android:name="com.example.szymon.githubapi.main.RecyclerFragment"
        android:id="@+id/recycler_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_recycler" />

</LinearLayout>
